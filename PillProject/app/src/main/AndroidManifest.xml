<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="anna.course.pillproject" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".tab1"
            android:label="@string/title_activity_tab1"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="anna.course.pillproject.MainActivity" />
        </activity>
        <activity
            android:name=".tab2"
            android:label="@string/title_activity_tab2"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="anna.course.pillproject.MainActivity" />
        </activity>
        <activity
            android:name=".tab3"
            android:label="@string/title_activity_tab3"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="anna.course.pillproject.MainActivity" />
        </activity>
        <activity
            android:name=".Clock"
            android:label="@string/title_activity_clock"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="anna.course.pillproject.MainActivity" />
        </activity>
    </application>

</manifest>
