<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:id="@+id/graph"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Want to know the best time to take your pill?"
        android:id="@+id/analyze_me"
        android:layout_below="@+id/graph"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/your_analysis"
        android:layout_below="@+id/analyze_me"
        android:layout_alignLeft="@+id/analyze_me"
        android:layout_alignStart="@+id/analyze_me"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/analyze_me"
        android:layout_alignEnd="@+id/analyze_me" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset pedometer"
        android:id="@+id/reset_pedometer"
        android:layout_alignBottom="@+id/your_analysis"
        android:layout_alignRight="@+id/your_analysis"
        android:layout_alignEnd="@+id/your_analysis"
        android:onClick="reset+pedometermPreviousCounterSteps"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Number of steps you took per hour"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>