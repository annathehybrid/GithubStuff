<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent">



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Press me to reset"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/button"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="28dp"
        android:textColor="@color/tabsScrollColor"
        />



    <TextView
        android:id="@+id/askme"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:text="@string/intro"
        android:layout_above="@+id/option_1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:id="@+id/option_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/option"
        android:gravity="center"
        android:text="@string/option_1"
        android:textStyle="bold"
        android:layout_above="@+id/option_2"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/option_2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/option"
        android:gravity="center"
        android:text="@string/option_2"
        android:textStyle="bold"
        android:layout_above="@+id/option_3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/option_3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/option"
        android:gravity="center"
        android:text="@string/option_3"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"/>


    <TextView
        android:id="@+id/choice_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/choice"
        android:gravity="center"
        android:text="@string/choice_1"
        android:layout_above="@+id/choice_2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/choice_2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/choice"
        android:gravity="center"
        android:text="@string/choice_2"
        android:layout_above="@+id/choice_3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/choice_3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/choice"
        android:gravity="center"
        android:text="@string/choice_3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20sp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pill_blue"

        android:contentDescription="@string/hello_world"

        android:src="@drawable/circle_blue"
        android:longClickable="true"
        android:clickable="true"
        android:layout_above="@+id/option_2"
        android:layout_toRightOf="@+id/button"
        android:layout_toEndOf="@+id/button" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pill_green"

        android:contentDescription="@string/hello_world"

        android:src="@drawable/circle_green"
        android:longClickable="true"
        android:clickable="true"


        android:layout_below="@+id/option_1"
        android:layout_toRightOf="@+id/button"
        android:layout_toEndOf="@+id/button" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pill_red"

        android:contentDescription="@string/hello_world"

        android:src="@drawable/circle_red"
        android:longClickable="true"
        android:clickable="true"

        android:layout_below="@+id/pill_green"
        android:layout_toRightOf="@+id/button"
        android:layout_toEndOf="@+id/button" />


</RelativeLayout>